# Centrifugo Production Environment Variables
# Copy this file to .env and fill in secure values

# ===========================================
# REQUIRED - Generate secure random strings
# ===========================================

# JWT token secret for client authentication (min 32 chars)
# Generate with: openssl rand -hex 32
CENTRIFUGO_TOKEN_SECRET=your-secure-token-secret-min-32-characters

# API key for server-to-Centrifugo communication (min 32 chars)
# Generate with: openssl rand -hex 32
CENTRIFUGO_API_KEY=your-secure-api-key-min-32-characters

# ===========================================
# OPTIONAL - Admin interface
# ===========================================

# Admin panel password (leave empty to disable admin UI)
CENTRIFUGO_ADMIN_PASSWORD=

# Admin panel secret for admin token generation
CENTRIFUGO_ADMIN_SECRET=

# ===========================================
# OPTIONAL - Port configuration
# ===========================================

# Centrifugo external port (default: 8000)
CENTRIFUGO_PORT=8000
