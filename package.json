{
  "name": "abbacchio",
  "version": "0.1.0",
  "private": true,
  "description": "Real-time log viewer dashboard with HTTP ingestion for Pino, Winston, Bunyan, and other loggers",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm --filter @abbacchio/api dev\" \"pnpm --filter @abbacchio/dashboard dev\"",
    "dev:api": "pnpm --filter @abbacchio/api dev",
    "dev:dashboard": "pnpm --filter @abbacchio/dashboard dev",
    "build": "pnpm -r build",
    "build:api": "pnpm --filter @abbacchio/api build",
    "build:transport": "pnpm --filter @abbacchio/transport build",
    "build:dashboard": "pnpm --filter @abbacchio/dashboard build",
    "start": "pnpm --filter @abbacchio/api start",
    "test": "pnpm -r test",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules"
  },
  "keywords": [
    "pino",
    "winston",
    "bunyan",
    "logs",
    "logging",
    "dashboard",
    "real-time",
    "sse",
    "viewer",
    "transport"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.1.2",
    "pino": "^10.2.0",
    "typescript": "^5.7.2",
    "winston": "^3.19.0"
  },
  "engines": {
    "node": ">=18"
  }
}
